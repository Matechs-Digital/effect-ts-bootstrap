{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["ES2019"],
    "target": "ES5",
    "strict": true,
    "outDir": "lib",
    "noErrorTruncation": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "migrations/**/*.ts",
    "articles/**/*.ts"
  ]
}
